@page "{Id:int?}"
@model OdeToFood.Pages.Restaurants.EditarModel
@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h3> Editando @Model.Restaurant.Nombre</h3>
<form method="post">

    <input type="hidden"u asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Nombre"></label>
        <input class="form-control" asp-for="Restaurant.Nombre" />
        <span class="text-danger" asp-validation-for="Restaurant.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Ubicacion"></label>
        <input class="form-control" asp-for="Restaurant.Ubicacion" />
        <span class="text-danger" asp-validation-for="Restaurant.Ubicacion"></span>

    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Cocina"></label>
        <select class="form-control" asp-for="Restaurant.Cocina"
                asp-items="Model.Cocinas"></select>
        <span class="text-danger" asp-validation-for="Restaurant.Cocina"></span>

    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>